<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorNavyBlue"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="130dp"
            android:layout_height="41dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_marginStart="20dp"
            android:text="@string/select_language"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/rlRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvWelcome"
            android:layout_margin="15dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <RelativeLayout
                android:id="@+id/rlEnglish"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_weight="0.5"
                android:background="@drawable/new_button_bg"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/english"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/radioEnglish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:enabled="false"
                    app:buttonTint="@color/black" />

                <ImageView
                    android:layout_width="83dp"
                    android:layout_height="66dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:contentDescription="@string/english"
                    android:src="@drawable/english" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlHindi"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_weight="0.5"
                android:background="@drawable/bg_language_unselected"
                android:padding="15dp">

                <TextView
                    android:id="@+id/tvHindi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hindi"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvHindi"
                    android:layout_marginTop="10dp"
                    android:text="@string/hindi_hindi"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/radioHindi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:enabled="false"
                    app:buttonTint="@color/black" />

                <ImageView
                    android:layout_width="78dp"
                    android:layout_height="57dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:contentDescription="@string/hindi"
                    android:src="@drawable/hindi" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rlRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlRow1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:weightSum="1">

            <RelativeLayout
                android:id="@+id/rlMarathi"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_weight="0.5"
                android:background="@drawable/bg_language_unselected"
                android:padding="15dp">

                <TextView
                    android:id="@+id/tvMarathi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/marathi"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvMarathi"
                    android:layout_marginTop="10dp"
                    android:text="@string/marathi_marathi"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/radioMarathi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:enabled="false"
                    app:buttonTint="@color/black" />

                <ImageView
                    android:layout_width="78dp"
                    android:layout_height="57dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:contentDescription="@string/marathi"
                    android:src="@drawable/marathi" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlPunjabi"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_weight="0.5"
                android:background="@drawable/bg_language_unselected"
                android:padding="15dp">

                <TextView
                    android:id="@+id/tvPunjabi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/punjabi"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvPunjabi"
                    android:layout_marginTop="10dp"
                    android:text="@string/punjabi_punjabi"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/radioPunjabi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:enabled="false"
                    app:buttonTint="@color/black" />

                <ImageView
                    android:layout_width="78dp"
                    android:layout_height="57dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:contentDescription="@string/punjabi"
                    android:src="@drawable/punjabi" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rlRow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlRow2"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <RelativeLayout
                android:id="@+id/rlTamil"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_weight="0.5"
                android:background="@drawable/bg_language_unselected"
                android:padding="15dp">

                <TextView
                    android:id="@+id/tvTamil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tamil"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvTamil"
                    android:layout_marginTop="10dp"
                    android:text="@string/tamil_tamil"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/radioTamil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:enabled="false"
                    app:buttonTint="@color/black" />

                <ImageView
                    android:layout_width="78dp"
                    android:layout_height="57dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:contentDescription="@string/tamil"
                    android:src="@drawable/tamil" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlTelugu"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_weight="0.5"
                android:background="@drawable/bg_language_unselected"
                android:padding="15dp">

                <TextView
                    android:id="@+id/tvTelugu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/telugu"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvTelugu"
                    android:layout_marginTop="10dp"
                    android:text="@string/telugu_telugu"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/radioTelugu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:enabled="false"
                    app:buttonTint="@color/black" />

                <ImageView
                    android:layout_width="78dp"
                    android:layout_height="57dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:contentDescription="@string/telugu"
                    android:src="@drawable/telugu" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rlRow4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlRow3"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <RelativeLayout
                android:id="@+id/rlKannada"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_weight="0.5"
                android:background="@drawable/bg_language_unselected"
                android:padding="15dp">

                <TextView
                    android:id="@+id/tvKannada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kannada"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvKannada"
                    android:layout_marginTop="10dp"
                    android:text="@string/kannada_kannada"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/radioKannada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:enabled="false"
                    app:buttonTint="@color/black" />

                <ImageView
                    android:layout_width="78dp"
                    android:layout_height="57dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:contentDescription="@string/kannada"
                    android:src="@drawable/kannada" />
            </RelativeLayout>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlRow4"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/new_button_bg"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="@string/continue_lan"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <FrameLayout
            android:id="@+id/native_ad_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvContinue"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_8sdp" />

    </RelativeLayout>
</ScrollView>