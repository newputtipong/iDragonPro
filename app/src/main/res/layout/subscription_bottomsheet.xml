<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorNavyBlue">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="278dp"
                android:layout_height="142dp"
                app:cardCornerRadius="@dimen/_10sdp"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/imgSubscription"
                    android:layout_width="278dp"
                    android:layout_height="142dp" />
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/imgCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                app:srcCompat="@drawable/ic_cancel_new" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/subParentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_10sdp"/>

        <FrameLayout
            android:id="@+id/fl_adplaceholder_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginVertical="@dimen/_15sdp"/>


    </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab3"
            android:layout_width="45dp"
            android:layout_height="47dp"
            android:layout_marginTop="45dp"
            android:paddingBottom="2dp"
            android:layout_marginEnd="13dp"
            android:layout_alignParentEnd="true"
            app:fabCustomSize="45dp"
            app:srcCompat="@drawable/ic_media_stop_dark" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab2"
            android:layout_width="45dp"
            android:layout_height="47dp"
            android:layout_marginTop="45dp"
            android:paddingBottom="2dp"
            android:layout_marginEnd="13dp"
            android:layout_alignParentEnd="true"
            app:fabCustomSize="45dp"
            app:srcCompat="@drawable/exo_icon_repeat_all" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab1"
            android:layout_width="45dp"
            android:layout_height="47dp"
            android:layout_marginTop="45dp"
            android:paddingBottom="2dp"
            android:layout_marginEnd="13dp"
            android:layout_alignParentEnd="true"
            app:fabCustomSize="45dp"
            app:srcCompat="@drawable/exo_icon_pause" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="8dp"
            app:srcCompat="@drawable/volume" />

        <ImageView
            android:id="@+id/img_help"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/girl_help"
            android:layout_toStartOf="@+id/fab"
            android:layout_marginEnd="5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-20dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/img_help"
            android:layout_alignTop="@+id/img_help"
            android:textColor="@color/colorWhite"
            android:textSize="30sp"
            android:text="@string/help"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_10sdp"
            android:background="#99282828"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/cancel"
            android:layout_alignLeft="@+id/img_help"
            android:layout_alignTop="@+id/img_help"
            android:visibility="gone"/>

    </RelativeLayout>
</ScrollView>